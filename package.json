{
  "name": "amcoeur-web-app",
  "workspaces": [
    "apps/*"
  ],
  "version": "1.0.0",
  "description": "Web app for the Amcoeur association",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run dev -w @amcoeur/client",
    "watch": "npm run watch -w @amcoeur/client",
    "dev-server": "npm run dev -w @amcoeur/server",
    "build": "npm run build -w @amcoeur/client && npm run build -w @amcoeur/server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run start -w @amcoeur/server"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.7.1",
    "@types/nodemailer": "^6.4.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@ark-ui/react": "^0.15.0",
    "@types/express": "^4.17.18",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "nodemailer": "^6.9.5",
    "ts-node": "^10.9.1"
  }
