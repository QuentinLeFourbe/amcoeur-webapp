{
  "name": "amcoeur-web-app",
  "workspaces": [
    "apps/*"
  ],
  "type": "module",
  "version": "1.0.0",
  "description": "Web app for the Amcoeur association",
  "main": "index.js",
  "scripts": {
    "start": "npm run start -w @amcoeur/server",
    "dev-client": "npm run dev -w @amcoeur/client",
    "dev-backoffice": "npm run dev -w @amcoeur/backoffice",
    "dev-server": "npm run dev -w @amcoeur/server",
    "watch-server": "npm run watch -w @amcoeur/server",
    "watch-types": "npm run watch -w @amcoeur/types",
    "build-types": "npm run build -w @amcoeur/types",
    "prebuild": "npm run build-types",
    "build-client": "npm run prebuild && npm run build -w @amcoeur/client",
    "build-backoffice": "npm run prebuild && npm run build -w @amcoeur/backoffice",
    "build-server": "npm run prebuild && npm run build -w @amcoeur/server",
    "build": "npm run prebuild && npm run build -w @amcoeur/client && npm run build -w @amcoeur/backoffice && npm run build -w @amcoeur/server",
    "test": "vitest",
    "start-db": "docker-compose up -d",
    "stop-db": "docker-compose down",
    "lint": "eslint './apps/server/src/**/*.{ts,tsx}' && eslint './apps/client/src/**/*.{ts,tsx}' && eslint './apps/backoffice/src/**/*.{ts,tsx}'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@codemirror/lang-markdown": "^6.2.3",
    "@codemirror/language-data": "^6.3.1",
    "@hookform/resolvers": "^3.3.1",
    "@mdx-js/rollup": "^2.3.0",
    "@tanstack/react-query": "^4.36.1",
    "@uiw/codemirror-theme-dracula": "^4.21.21",
    "@uiw/react-codemirror": "^4.21.21",
    "axios": "^1.5.1",
    "body-parser": "^1.20.2",
    "codemirror": "^6.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "googleapis": "^126.0.1",
    "helmet": "^7.0.0",
    "i18next": "^23.16.5",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "markdown-to-jsx": "^7.3.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-google-recaptcha": "^3.1.0",
    "react-hook-form": "^7.46.2",
    "react-i18next": "^15.1.1",
    "react-router-dom": "^6.16.0",
    "react-transition-group": "^4.4.5",
    "redis": "^4.7.0",
    "usehooks-ts": "^3.1.0",
    "uuid": "^9.0.1",
    "vite-plugin-mkcert": "^1.17.6",
    "winston": "^3.12.0",
    "yup": "^1.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.3",
