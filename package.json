{
  "name": "amcoeur-web-app",
  "workspaces": [
    "apps/*"
  ],
  "version": "1.0.0",
  "description": "Web app for the Amcoeur association",
  "main": "index.js",
  "scripts": {
    "dev": "npm run dev -w @amcoeur/client",
    "dev-server": "npm run dev -w @amcoeur/server",
    "watch-server": "npm run watch -w @amcoeur/server",
    "fakedb": "json-server --watch ./apps/backoffice/mockedDb/db.json",
    "watch": "npm run watch -w @amcoeur/client",
    "watch-backoffice": "npm run watch -w @amcoeur/backoffice",
    "watch-types": "npm run watch -w @amcoeur/types",
    "build": "npm run build -w @amcoeur/types && npm run build -w @amcoeur/client  && npm run build -w @amcoeur/backoffice && npm run build -w @amcoeur/server ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run start -w @amcoeur/server",
    "start-db": "docker-compose up -d",
    "stop-db": "docker-compose down",
    "lint": "eslint './apps/server/src/**'"
  },
